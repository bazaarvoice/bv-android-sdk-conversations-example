<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.conversations.MainActivity"
  tools:layout_editor_absoluteX="0dp"
  tools:layout_editor_absoluteY="81dp">

  <Button
    android:id="@+id/displayReviewsButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:text="Display Reviews"
    app:layout_constraintBottom_toTopOf="@+id/viewFormButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"/>

  <Button
    android:id="@+id/viewFormButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="View Form"
    app:layout_constraintBottom_toTopOf="@+id/submitReviewButton"
    app:layout_constraintEnd_toEndOf="@+id/displayReviewsButton"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/displayReviewsButton"
    app:layout_constraintTop_toBottomOf="@+id/displayReviewsButton"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"/>

  <Button
    android:id="@+id/submitReviewButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="16dp"
    android:text="Submit Review"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/viewFormButton"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="@+id/viewFormButton"
    app:layout_constraintTop_toBottomOf="@+id/viewFormButton"
    />
</android.support.constraint.ConstraintLayout>

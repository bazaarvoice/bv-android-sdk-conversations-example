<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.conversations">

  <application
    android:name=".App"
    android:allowBackup="true"
    android:networkSecurityConfig="@xml/network_security_config"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".reviews.DisplayReviewsActivity"
      android:label="@string/title_activity_display_reviews">
    </activity>
    <activity
      android:name=".reviews.ViewFormActivity"
      android:label="@string/title_activity_view_form">
    </activity>
    <activity
      android:name=".reviews.SubmitReviewActivity"
      android:label="@string/title_activity_submit_review">
    </activity>
  </application>

</manifest>